@model FatturaSubito.Models.Utente
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginRegistrazioneLayout.cshtml";
}

<main class="d-flex w-100">
    <div class="container d-flex flex-column">
        <div class="row vh-100">
            <div class="col-sm-10 col-md-8 col-lg-6 col-xl-5 mx-auto d-table h-100">
                <div class="d-table-cell align-middle">

                    <div class="text-center mt-4">
                        <h1 class="h2">Bentornato!</h1>
                        <p class="lead">
                            Accedi per continuare
                        </p>
                    </div>

                    <div class="card">
                        <div class="card-body">
                            <div class="m-sm-3">
                                @using (Html.BeginForm("Login", "Auth", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="mb-3">
                                        @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-lg", placeholder = "Inserisci la tua email" })
                                        @Html.ValidationMessageFor(m => m.Email, "", new {@class = "text-danger"})
                                    </div>
                                    <div class="mb-3">
                                        @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-lg", placeholder = "Inserisci la tua password" })
                                        @Html.ValidationMessageFor(m => m.Password, "", new {@class = "text-danger"})
                                    </div>
                                    <div>
                                        <div class="form-check align-items-center">
                                            <input class="form-check-input" type="checkbox" id="keepLogged" name="keepLogged" value="true" />
                                            <label class="form-check-label fw-bold ms-1" for="keepLogged">
                                                Mantienimi connesso
                                            </label>
                                        </div>
                                    </div>
                                    <div class="d-grid gap-2 mt-3">
                                        <button type="submit" class="btn btn-lg btn-primary">Login</button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="text-center mb-3">
                        Non hai un'account? <a href="@Url.Action("Registrazione", "Auth")">Iscriviti</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
